


SOURCES = RobotController.cc MathUtils.cc Vision.cc CameraReceiverLinux.cc ServerSocketLinux.cc RobotStateParser.cc
OBJECTS = $(SOURCES:.cc=.o)
EXECUTABLE = RobotController.exe

# Add OpenCV library paths
OPENCV_LIB_PATH = /usr/lib/x86_64-linux-gnu

# Add OpenCV include paths
OPENCV_INCLUDE_PATH = /usr/include/opencv4/

all: $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	g++ $^ -std=c++11 -L$(OPENCV_LIB_PATH) -lopencv_core -lopencv_imgproc -lopencv_highgui -lopencv_calib3d -lopencv_features2d -o $@

%.o: %.cc
	g++ -std=c++11 -I./libs/json/include/ -I$(OPENCV_INCLUDE_PATH) -c $< -o $@

clean:
	rm -f $(EXECUTABLE) $(OBJECTS)
